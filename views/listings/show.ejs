<% layout("/layouts/boilerPlate") %>
<style>
  body { background: #f8fafc; }
  
  .hero-section {
    background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
    color: white;
    padding: 4rem 0;
    margin-bottom: 3rem;
  }
  
  .property-gallery {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    margin-bottom: 2rem;
  }
  
  .main-image {
    height: 450px;
    object-fit: cover;
    cursor: pointer;
  }
  
  .thumbnail-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 8px;
    padding: 12px;
    background: white;
  }
  
  .thumbnail {
    height: 70px;
    object-fit: cover;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
    border: 2px solid transparent;
  }
  
  .thumbnail:hover {
    border-color: #3b82f6;
    transform: scale(1.02);
  }
  
  .property-details {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 25px rgba(0,0,0,0.06);
    padding: 2.5rem;
    margin-bottom: 2rem;
  }
  
  .price-section {
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    color: white;
    padding: 1.5rem;
    border-radius: 12px;
    text-align: center;
    margin-bottom: 1.5rem;
  }
  
  .price-amount {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }
  
  .owner-card {
    background: #f1f5f9;
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
  }
  
  .action-buttons {
    display: flex;
    gap: 12px;
    justify-content: center;
    margin: 2rem 0;
  }
  
  .btn-custom {
    padding: 12px 24px;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.2s ease;
  }
  
  .btn-edit {
    background: #3b82f6;
    border: none;
    color: white;
  }
  
  .btn-edit:hover {
    background: #2563eb;
    transform: translateY(-1px);
  }
  
  .btn-delete {
    background: #ef4444;
    border: none;
    color: white;
  }
  
  .btn-delete:hover {
    background: #dc2626;
    transform: translateY(-1px);
  }
  
  .map-container {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 25px rgba(0,0,0,0.06);
    overflow: hidden;
  }
  
  .map-header {
    padding: 1.5rem;
    border-bottom: 1px solid #e2e8f0;
    background: #f8fafc;
  }
  
  .review-section {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 25px rgba(0,0,0,0.06);
    padding: 2.5rem;
    margin-top: 3rem;
  }
  
  .review-form {
    background: #f8fafc;
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    padding: 2rem;
    margin-bottom: 2.5rem;
  }
  
  .review-card {
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    transition: all 0.2s ease;
  }
  
  .review-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.08);
    border-color: #cbd5e1;
  }
  
  .tag-badge {
    background: #e0f2fe;
    color: #0369a1;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 500;
    margin-right: 8px;
    margin-bottom: 8px;
    display: inline-block;
  }
  
  .section-title {
    color: #1e293b;
    font-weight: 700;
    margin-bottom: 1.5rem;
  }
  
  .text-muted-custom {
    color: #64748b;
    line-height: 1.6;
  }
</style>

<body>
  <!-- Hero Section -->
  <div class="hero-section">
    <div class="container">
      <div class="row">
        <div class="col-12 text-center">
          <h1 class="display-4 fw-bold mb-4"><%= listing.title %></h1>
          <p class="lead mb-0 opacity-90">
            <i class="fa-solid fa-location-dot me-2"></i> 
            <%= listing.location %>, <%= listing.country %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <!-- Left Column - Images and Details -->
      <div class="col-lg-8">
        <!-- Image Gallery -->
        <div class="property-gallery mb-4">
          <% if(listing.images && listing.images.length > 0) { %>
            <img src="<%= listing.images[0].url %>" class="w-100 main-image" id="mainImage" alt="<%= listing.title %>" onclick="openImageModal('<%= listing.images[0].url %>')">
            <% if(listing.images.length > 1) { %>
              <div class="thumbnail-grid">
                <% listing.images.slice(1, 5).forEach((image, index) => { %>
                  <img src="<%= image.url %>" class="thumbnail" alt="Image <%= index + 2 %>" onclick="changeMainImage('<%= image.url %>')">
                <% }); %>
              </div>
            <% } %>
          <% } else if(listing.image) { %>
            <img src="<%= listing.image.url %>" class="w-100 main-image" alt="<%= listing.title %>" onclick="openImageModal('<%= listing.image.url %>')">
          <% } %>
        </div>

        <!-- Property Details -->
        <div class="property-details">
          <div class="row">
            <div class="col-md-8">
              <h3 class="section-title">About this place</h3>
              <p class="text-muted-custom mb-4"><%= listing.description %></p>
              
              <div class="mb-0">
                <h5 class="section-title">Amenities & Features</h5>
                <% listing.tags.forEach(tag => { %>
                  <span class="tag-badge"><%= tag %></span>
                <% }); %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="price-section">
                <div class="price-amount">₹<%= listing.price.toLocaleString("en-IN") %></div>
                <div class="opacity-90">per night</div>
              </div>
              <div class="owner-card">
                <i class="fa-solid fa-user-circle fa-3x text-primary mb-3"></i>
                <h6 class="fw-bold mb-1">Hosted by</h6>
                <p class="mb-0 text-muted-custom"><%= listing.owner.username %></p>
              </div>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <% if(currUser && currUser._id.equals(listing.owner._id)){ %>
          <div class="action-buttons">
            <a href="/listings/<%=listing._id%>/edit" class="btn btn-custom btn-edit">
              <i class="fa-solid fa-edit me-2"></i>Edit Listing
            </a>
            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE" class="d-inline">
              <button class="btn btn-custom btn-delete" onclick="return confirm('Are you sure?')">
                <i class="fa-solid fa-trash me-2"></i>Delete Listing
              </button>
            </form>
          </div>
        <% } %>
      </div>

      <!-- Right Column - Map -->
      <div class="col-lg-4">
        <% if(listing.coordinates && listing.coordinates.lat && listing.coordinates.lng) { %>
          <div class="map-container sticky-top" style="top: 2rem;">
            <div class="map-header">
              <h5 class="mb-0 fw-bold"><i class="fa-solid fa-map-location-dot me-2"></i>Location</h5>
            </div>
            <div id="map" style="height: 400px;"></div>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Reviews Section -->
    <div class="row mt-5">
      <div class="col-12">
        <div class="review-section">
          <h3 class="section-title">
            <i class="fa-solid fa-star text-warning me-2"></i> 
            Reviews (<%= listing.reviews.length %>)
          </h3>

          <!-- Review Form -->
          <% if(currUser){ %>
            <div class="review-form">
              <h5 class="fw-bold mb-4">Share your experience</h5>
              <form method="POST" action="/listings/<%= listing._id %>/reviews" enctype="multipart/form-data" novalidate>
                <div class="row">
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label class="form-label">Rating</label>
                      <fieldset class="starability-slot">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                      </fieldset>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label for="review-images" class="form-label">Add Photos</label>
                      <input type="file" class="form-control" name="review[images]" id="review-images" multiple accept="image/*">
                      <div id="review-image-preview" class="mt-2"></div>
                    </div>
                  </div>
                </div>
                <div class="mb-3">
                  <label for="comment" class="form-label">Your Review</label>
                  <textarea class="form-control" name="review[comment]" id="comment" rows="4" required placeholder="Share your experience..."></textarea>
                </div>
                <button class="btn btn-custom btn-edit">
                  <i class="fa-solid fa-paper-plane me-2"></i>Submit Review
                </button>
              </form>
            </div>
          <% } %>

          <!-- Reviews List -->
          <div class="reviews-list">
            <% if(listing.reviews.length === 0) { %>
              <div class="text-center py-5">
                <i class="fa-solid fa-comments fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No reviews yet</h5>
                <p class="text-muted">Be the first to share your experience!</p>
              </div>
            <% } else { %>
              <% for(let i = 0; i < listing.reviews.length; i++){%>
                <div class="review-card animate-fadeInUp" style="animation-delay: <%= i * 0.1 %>s;">
                  <div class="d-flex justify-content-between align-items-start mb-2">
                    <div class="d-flex align-items-center">
                      <i class="fa-solid fa-user-circle fa-2x text-primary me-2"></i>
                      <div>
                        <h6 class="mb-0">@<%= listing.reviews[i].author.username%></h6>
                        <p class="starability-result mb-0" data-rating="<%=listing.reviews[i].rating%>"></p>
                      </div>
                    </div>
                    <% if(currUser){ %>
                      <form method="post" action="/listings/<%= listing._id %>/reviews/<%= listing.reviews[i]._id %>?_method=DELETE" class="d-inline">
                        <button class="btn btn-sm btn-outline-danger">
                          <i class="fa-solid fa-flag me-1"></i>Report
                        </button>
                      </form>
                    <% } %>
                  </div>
                  
                  <p class="mb-2"><%=listing.reviews[i].comment%></p>
                  
                  <% if(listing.reviews[i].images && listing.reviews[i].images.length > 0) { %>
                    <div class="review-images">
                      <% listing.reviews[i].images.forEach((image, idx) => { %>
                        <img src="<%= image.url %>" class="me-2 mb-2" alt="Review image" 
                             style="width: 60px; height: 60px; object-fit: cover; border-radius: 8px; cursor: pointer;" 
                             onclick="openImageModal('<%= image.url %>')">
                      <% }); %>
                    </div>
                  <% } %>
                </div>
              <%}%>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Image Modal -->
  <div class="modal fade" id="imageModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Image Gallery</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body text-center p-0">
          <img id="modalImage" src="" class="img-fluid" alt="Full size image">
        </div>
      </div>
    </div>
  </div>

  <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />

  <script>
    // Map functionality
    <% if(listing.coordinates && listing.coordinates.lat && listing.coordinates.lng) { %>
      const map = L.map('map').setView([<%= listing.coordinates.lat %>, <%= listing.coordinates.lng %>], 15);
      
      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '© OpenStreetMap contributors'
      }).addTo(map);
      
      L.marker([<%= listing.coordinates.lat %>, <%= listing.coordinates.lng %>])
        .addTo(map)
        .bindPopup('<b><%= listing.title %></b><br><%= listing.location %>, <%= listing.country %>')
        .openPopup();
    <% } %>
    
    // Image functionality
    function changeMainImage(src) {
      document.getElementById('mainImage').src = src;
    }
    
    function openImageModal(imageSrc) {
      document.getElementById('modalImage').src = imageSrc;
      new bootstrap.Modal(document.getElementById('imageModal')).show();
    }
    
    // Review image preview
    document.getElementById('review-images')?.addEventListener('change', function(e) {
      const preview = document.getElementById('review-image-preview');
      preview.innerHTML = '';
      
      Array.from(e.target.files).forEach(file => {
        const reader = new FileReader();
        reader.onload = function(e) {
          const img = document.createElement('img');
          img.src = e.target.result;
          img.style.cssText = 'width: 50px; height: 50px; object-fit: cover; border-radius: 8px; margin-right: 8px; margin-bottom: 8px;';
          preview.appendChild(img);
        };
        reader.readAsDataURL(file);
      });
    });
  </script>
</body>